@model ProductDtoForInsertion


<form method="post" asp-action="Create">
    <div class="text-center">
        <h3 class="display-3">
            Ürün Ekle
        </h3>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select asp-items="@ViewBag.Categories" asp-for="CategoryId" class="form-control">
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input class="form-control" asp-for="ProductName" placeholder="Ürün adı giriniz." />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" placeholder="Ürün fiyatını giriniz." />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="button-group mt-3 my-3">
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
            <i class="fa fa-home"></i>
            Ana Sayfa</a>

        <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
            <i class="fa fa-list"></i>
            Ürünler
        </a>
        <input class="btn btn-success" type="submit" value="Gönder" />

    </div>
</form>
