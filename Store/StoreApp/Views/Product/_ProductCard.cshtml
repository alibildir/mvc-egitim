@model Product

<div class="col-sm-12 col-md-4 col-lg-3">

    <div class="card" style="width: 18rem;">
        <img src="@Url.Content($"~/images/{Model.ProductId}.jpg")" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model?.ProductName</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's
                content.</p>

            <div class="form-group">

                <a asp-controller="Product" asp-action="Get" asp-route-id="@Model?.ProductId" class="btn btn-primary">
                    <i class="fa fa-arrow-right"></i>
                    Get Details</a>

                <form id="@Model?.ProductId" method="post" asp-page="/Cart">
                    <input type="hidden" name="productId" value="@Model?.ProductId">
                    <input type="hidden" name="returnUrl" value="@Context.Request.Path">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>